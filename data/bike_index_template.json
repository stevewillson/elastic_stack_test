{
    "index_patterns": ["bike*"],
    "template": "bike_rentals",
    "version": 3,
    "order" : 3,
    "settings":{
        "number_of_replicas": "0",
        "number_of_shards": "1",
        "index.refresh_interval":"30s"
    },
    "mappings": {
        "_doc": {
            "properties": {
                "trip_id": { "type": "integer" },
                "year": { "type": "integer" },
                "month": { "type": "integer" },
                "week": { "type": "integer" },
                "day": { "type": "integer" },
                "hour": { "type": "integer" },
                "usertype": { "type": "text" },
                "gender": { "type": "text" },
                "starttime": { "type": "date_time" },
                "stoptime": { "type": "date_time" },
                "tripduration": { "type": "float" },
                "temperature": { "type": "float" },
                "events": { "type": "text" },
                "from_station_id":  { "type": "integer" },
                "from_station_name": { "type": "text" },
                "dpcapacity_start": { "type": "float" },
                "to_station_id":  { "type": "integer" },
                "to_station_name": { "type": "text" },
                "dpcapacity_end": { "type": "float" },
                "location_start": { 
                    "properties": {
                        "location": { "type": "geo_point" }
                    }
                },
                "location_end": { 
                    "properties": {
                        "location": { "type": "geo_point" }
                    }
                }
            }
        }
    }
}
